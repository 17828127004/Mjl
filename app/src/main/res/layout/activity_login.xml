<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bj"
    android:weightSum="2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.9"
    android:orientation="vertical"
    >
<ImageView
    android:id="@+id/iv_login_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/ic_down"
    android:padding="10dp"
    android:scaleType="center"/>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/iv_login_phone"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/login_name"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/et_loginPhone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_login_phone"
        android:layout_marginLeft="10dp"
        android:hint="输入手机号"
        android:textColor="@color/white"
        android:background="@null"
        android:inputType="number"
        android:textSize="14sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/red_title"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_login_password"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="65dp"
            >
            <ImageView
                android:id="@+id/iv_login_ph"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/login_password"
                android:layout_marginLeft="15dp"
                />
            <EditText
                android:id="@+id/et_loginPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_login_ph"
                android:layout_marginLeft="10dp"
                android:hint="输入密码"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="@color/bg_white"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/red_title"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/btn_blue_selector_login"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/rl_login_password"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:text="@string/login"
            android:textSize="16sp"
            android:textColor="@color/bg_white"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_pink_selector_register"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/btn_login"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="@color/bg_white"/>
        <TextView
            android:id="@+id/tv_login_setPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/red_title"
            android:layout_below="@+id/btn_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="14sp"/>

    </RelativeLayout>
</LinearLayout>
