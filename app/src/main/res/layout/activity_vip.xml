<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_selector"
    android:orientation="vertical">
<include
    layout="@layout/title_util_layout"/>
    <ImageView
        android:id="@+id/iv_vipCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/vip_bj"
        >
<TextView
    android:id="@+id/tv_vipNumm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40sp"
    android:textColor="@color/home_red"
    android:textStyle="bold"
    />
        <TextView
            android:id="@+id/tv_vipDW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/home_red"
            android:layout_alignBottom="@+id/tv_vipNumm"
            android:layout_toRightOf="@+id/tv_vipNumm"
            android:layout_toEndOf="@+id/tv_vipNumm"
            android:paddingBottom="7dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btn_vip_card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/vip_num_bj"
            android:textSize="14sp"
            android:textColor="@color/bg_white"/>
    </RelativeLayout>
</LinearLayout>
