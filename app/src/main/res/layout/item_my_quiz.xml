<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EFEFEF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_item_Group"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9">
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/item_answerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="土豆他老妈"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="35dp"
                android:layout_height="14dp"
                android:src="@drawable/happy_mine_vip"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/item_answerName"
                />
            <TextView
                android:id="@+id/item_answerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-1-19  11:05"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textColor="#909090"
                android:layout_below="@+id/item_answerName"
                />
            <TextView
                android:id="@+id/item_answerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我想买个布鲁尔的多少岁司法官所得税地方三等功地方是地方给对方地方给对方电风扇地方古典风格斯蒂芬"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:textColor="#909090"
                android:layout_below="@+id/item_answerTime"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:background="@drawable/shape_msg_bj"
                />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>
    <RelativeLayout
        android:id="@+id/rl_myQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">
        <TextView
            android:id="@+id/item_groupCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答 26"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            />
    </RelativeLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EFEFEF"/>-->
</LinearLayout>
