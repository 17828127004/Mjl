<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="209dp"
    android:layout_height="120dp"
    android:gravity="center_horizontal"
    android:background="@color/bg_white"
    >
<view.MyImg
    android:id="@+id/item_iv_home"
    android:layout_width="189dp"
    android:layout_height="120dp"
    android:src="@drawable/happy_mine_headimg_d"
    android:scaleType="centerCrop"
    android:background="@drawable/msg"
    />
    <View
        android:layout_width="10dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/item_iv_home"
        android:background="@color/bg_white"/>
    <view.CircleImageView
        android:id="@+id/item_ci_home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/happy_mine"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.5"
        />
    <TextView
        android:id="@+id/item_tv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小傻瓜"
        android:textColor="#90ffffff"
        android:textSize="7sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_ci_home"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        />
</RelativeLayout>
