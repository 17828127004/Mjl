<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_riv_log"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/item_timeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:text="科华南路店"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_timeName"
                android:layout_marginTop="5dp"
                android:text="营业时间："
                android:textColor="@color/tixt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_timeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_timeName"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv3"
                android:text="10:30-20:30"
                android:textColor="@color/tixt"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:layout_marginTop="4px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_iv1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/start" />

                <ImageView
                    android:id="@+id/item_iv2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/start"
                    android:layout_toRightOf="@+id/item_iv1"/>

                <ImageView
                    android:id="@+id/item_iv3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/start"
                    android:layout_toRightOf="@+id/item_iv2"/>

                <ImageView
                    android:id="@+id/item_iv4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/start"
                    android:layout_toRightOf="@+id/item_iv3"/>

                <ImageView
                    android:id="@+id/item_iv5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/start"
                    android:layout_toRightOf="@+id/item_iv4"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_item_timeDistance"
                    />
                <TextView
                    android:id="@+id/tv_item_timeDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.1/km"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/setpassword_code"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    />


            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
